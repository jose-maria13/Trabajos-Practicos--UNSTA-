    <script>
        const fondo="brown"
        document.getElementById('cuadrado1').addEventListener("mouseenter",enter)
        document.getElementById('cuadrado1').addEventListener("mouseleave",leave)
        document.getElementById('cuadrado2').addEventListener("mouseenter",enter2)
        document.getElementById('cuadrado2').addEventListener("mouseleave",leave)
        document.getElementById('cuadrado3').addEventListener("mouseenter",enter3)
        document.getElementById('cuadrado3').addEventListener("mouseleave",leave)
        document.getElementById('cuadrado4').addEventListener("mouseenter",enter4)
        document.getElementById('cuadrado4').addEventListener("mouseleave",leave)
        document.getElementById('cuadrado5').addEventListener("mouseenter",enter5)
        document.getElementById('cuadrado5').addEventListener("mouseleave",leave)
        function enter(){
            document.getElementById('general').style.background = "rgb(245, 242, 242)";
        }

        function enter2(){
            document.getElementById('general').style.background = "rgb(240, 156, 229)";
        }
        function enter3(){
            document.getElementById('general').style.background = "rgb(60, 58, 58)";
        }
        function enter4(){
            document.getElementById('general').style.background = "rgb(120, 134, 115)";
        }
        function enter5(){
            document.getElementById('general').style.background = "rgb(36, 209, 236)";
        }
        function leave(){
            document.getElementById('general').style.background = fondo;
        }
    </script>
